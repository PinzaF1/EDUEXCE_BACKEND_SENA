TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# ==================== JWT & SEGURIDAD ====================
# Secret key para firmar tokens JWT (generación/recuperación de contraseñas)
JWT_SECRET=tu-secret-key-aqui-min-32-caracteres
# Tiempo de expiración de tokens de recuperación en segundos (900 = 15 minutos)
JWT_RECOVERY_EXPIRES=900

# ==================== EMAIL (SMTP) ====================
# Configuración SMTP para envío de códigos de recuperación
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=tu-usuario
SMTP_PASS=tu-password
SMTP_FROM=no-reply@tudominio.com

# ==================== OPENAI (IA GENERATIVA) ====================
# API Key de OpenAI para generación de preguntas dinámicas
# Obtén tu key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-tu-key-aqui
# Modelo a usar (gpt-4o-mini es el más económico)
OPENAI_MODEL=gpt-4o-mini

# Timeout en milisegundos (20000 = 20 segundos)
OPENAI_TIMEOUT_MS=20000

# ==================== FRONTEND ====================
# URL del frontend para links de recuperación (si se usa método con link)
FRONT_URL=http://localhost:5173
