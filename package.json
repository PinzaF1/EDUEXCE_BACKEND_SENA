{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "build": "node ace build --ignore-ts-errors",
    "start": "node build/bin/server.js",
    "postbuild": "sh -c 'cp .env build/.env 2>/dev/null || echo No local .env to copy'",
    "dev": "node ace serve --hmr",
    "test": "cross-env NODE_ENV=test node ace test",
    "test:watch": "cross-env NODE_ENV=test node ace test --watch",
    "test:unit": "cross-env NODE_ENV=test node ace test --suite=unit",
    "test:functional": "cross-env NODE_ENV=test node ace test --suite=functional",
    "test:coverage": "cross-env NODE_ENV=test c8 node ace test",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/better-sqlite3": "^7.6.13",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.3",
    "@types/nodemailer": "^7.0.1",
    "@types/xlsx": "^0.0.35",
    "better-sqlite3": "^12.4.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.8.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@vinejs/vine": "^3.0.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "firebase-admin": "^13.5.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "ngrok": "^5.0.0-beta.2",
    "nodemailer": "^7.0.6",
    "openai": "^6.8.1",
    "pg": "^8.16.3",
    "phc-argon2": "^1.1.4",
    "react-router-dom": "^7.8.0",
    "reflect-metadata": "^0.2.2",
    "xlsx": "^0.18.5"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
